<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
           alignment="CENTER"
           style="-fx-background-color: rgba(0, 0, 0, 0.7);"
           prefWidth="800" prefHeight="600"
           fx:controller="com.example.demo.controller.GameOverController">
    <ImageView fx:id="backgroundImageView" fitWidth="1300" fitHeight="750" />

    <VBox spacing="20" alignment="CENTER">
        <Text text="Game Over" style="-fx-font-size: 50; -fx-fill: white;" fx:id="gameOverText"/>
        <Button text="Restart" fx:id="restartButton" onAction="#onRestartButtonClicked"/>
        <Button text="Exit" fx:id="exitButton" onAction="#onExitButtonClicked"/>
    </VBox>
</StackPane>