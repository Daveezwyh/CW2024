<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.MainMenuController">
    <ImageView fx:id="backgroundImageView" fitHeight="750" fitWidth="1300" />

    <HBox alignment="CENTER" prefHeight="61.0" prefWidth="1300.0" spacing="10">
        <children>
         <ImageView fitHeight="249.0" fitWidth="246.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../images/gamelogo.jpg" />
            </image>
         </ImageView>
         <VBox alignment="CENTER" prefHeight="516.0" prefWidth="355.0">
            <children>
               <Text fill="WHITE" stroke="BLACK" strokeType="OUTSIDE" text="Beat the Plane" textAlignment="CENTER" wrappingWidth="324.73651123046875">
                  <font>
                     <Font name="System Bold" size="48.0" />
                  </font>
                  <VBox.margin>
                     <Insets bottom="30.0" top="30.0" />
                  </VBox.margin>
               </Text>
                  <Button onAction="#onStartGame" prefHeight="26.0" prefWidth="329.0" text="Start">
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                  <VBox.margin>
                     <Insets bottom="10.0" top="30.0" />
                  </VBox.margin>
                  <font>
                     <Font size="20.0" />
                  </font>
                  </Button>
                  <Button onAction="#onExit" prefHeight="26.0" prefWidth="326.0" text="Exit">
                  <font>
                     <Font size="20.0" />
                  </font>
                  <VBox.margin>
                     <Insets bottom="30.0" top="10.0" />
                  </VBox.margin>
                  </Button>
            </children>
         </VBox>
        </children>
      <padding>
         <Insets bottom="100.0" />
      </padding>
    </HBox>
